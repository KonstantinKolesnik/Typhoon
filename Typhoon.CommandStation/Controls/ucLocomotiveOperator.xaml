                                <!--<telerik:RadToolBar Grid.Row="4" Style="{StaticResource Toolbar}" HorizontalAlignment="Stretch">
                                    <telerik:RadRibbonToggleButton loc:Translate.Uid="Light" Text="{loc:Translate Light}"/>
